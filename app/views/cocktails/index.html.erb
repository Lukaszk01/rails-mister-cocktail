<div class="container col-12 col-md-8 col-sm-4">
    <div class="row justify-content-around mt-3 mb-3 ml-3 mr-3">
  <% @cocktails.each do |cocktail| %>
<div class="card col-12 col-md-8 col-sm-4 mt-3 mb-3">
  <%= cocktail.name %>
    <%= render 'drink', cocktail: cocktail %>
      <div class="drink-card-img mt-3 mb-3">
  <% if cocktail.photo.attached? %>
    <a href=" <%= cocktail_url(cocktail) %> "><%= cl_image_tag cocktail.photo.key, height: 300, width: 300, crop: :fill %></a>
  <% end %>
</div>
</div>

    <% end %>
</div>
</div>



