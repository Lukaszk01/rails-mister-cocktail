<div class="container col-12 col-md-8 col-sm-4">
  <div class="text-center mt-3 mb-3">
      <h1>Cocktail list</h1>
  </div>
    <div class="row justify-content-around mt-3 mb-3 ml-3 mr-3">
      <% @cocktails.each do |cocktail| %>
        <div class="card col-12 col-md-8 col-sm-4 mb-3 mt-3">
          <%= cocktail.name %>
          <%= render 'drink', cocktail: cocktail %>
                <% if cocktail.photo.attached? %>
                  <a href=" <%= cocktail_url(cocktail) %> "><%= cl_image_tag cocktail.photo.key, height: 300, width: 300, crop: :fill %>
                     <div class="drink-card-img mt-3 mb-3">
                      <div class="overlay">
                        <div class="text-hover">Click to read more!</div>
                        </div>
                  </a>
                <% end %>
                    </div>
              </div>
      <% end %>
    </div>
</div>



