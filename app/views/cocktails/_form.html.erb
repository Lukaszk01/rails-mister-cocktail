<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mt-5">
      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file, label: ('Upload cocktail photo').html_safe %>
      <div class="button-submit">
        <%= f.button :submit %>
      </div>

      <% end %>
    </div>
  </div>
</div>
